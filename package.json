{
  "name": "ds-lic",
  "version": "1.0.0",
  "private": true,
  "main": "src/main/main.js",
  "description": "Dascom Light and Ink Craftsmen",
  "author": {
    "name": "Dascom",
    "email": "1164921330@qq.com"
  },
  "homepage": "https://dascom.cn",
  "scripts": {
    "serve": "vue-cli-service serve",
    "start": "chcp 65001 && electron .",
    "vueBuild": "vue-cli-service build",
    "build": "vue-cli-service build && electron-builder -w",
    "fix-memory-limit": "cross-env LIMIT=8096 increase-memory-limit",
    "build:linux": "electron-builder --linux",
    "build:win":"electron-builder -w"
  },
  "dependencies": {
    "@types/node": "^22.7.4",
    "ant-design-vue": "^4.2.5",
    "axios": "^1.6.7",
    "core-js": "^3.8.3",
    "electron-log": "^5.1.1",
    "ffi-rs": "^1.0.50",
    "increase-memory-limit": "^1.0.6",
    "normalize.css": "^8.0.1",
    "pnpm": "^9.12.1",
    "sql.js": "^1.10.3",
    "vue": "^3.2.13",
    "vue-class-component": "^8.0.0-0",
    "vue-router": "^4.0.3",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "autoprefixer": "^10.4.20",
    "electron": "^22.3.27",
    "electron-builder": "^24.9.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "less": "^4.0.0",
    "less-loader": "^8.0.0",
    "postcss": "^8.4.47",
    "prettier": "^2.4.1",
    "tailwindcss": "^3.4.13",
    "typescript": "~4.5.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "vue/setup-compiler-macros": true
    },
    "extends": ["plugin:vue/vue3-essential", "eslint:recommended", "@vue/typescript/recommended", "plugin:prettier/recommended"],
    "parserOptions": {
      "ecmaVersion": 2024
    },
    "rules": {}
  },
  "browserslist": ["> 1%", "last 2 versions", "not dead", "not ie 11"],
  "build": {
    "appId": "JIANGMEN.DASCOM.COMPUTER.PERIPHERALS",
    "productName": "DS-LICraftsmen",
    "asar": false,
    "copyright": "得实集团",
    "buildVersion": "1.0.0.0",
    "directories": {
      "buildResources": "resources",
      "output": "release/${buildVersion}"
    },
    "files": ["build/dist", "resources/icon", "src/main", "src/preload"],
    "extraResources": [
      {
        "from": "./release/html/",
        "to": "../html/"
      },
      {
        "from": "./resources/common/",
        "to": "../common/"
      }
    ],
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "icon": "./resources/icon/logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["ia32"]
        }
      ]
    },
    "linux": {
      "icon": "./resources/icon/logo.png",
      "target": [
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "maintainer": "dascom.com",
      "category": "Utility"
    },
    "mac": {}
  }
}
